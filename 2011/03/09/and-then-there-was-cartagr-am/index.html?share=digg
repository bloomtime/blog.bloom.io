<script type="text/javascript" charset="utf-8">
(function (window, $, BS) {
function updateSubmitLinkButtons(){
if(userModel.isLoggedIn()){
$("#submit-btns-container").hide();
$("#btn-submit-link-action").show();
}else{
$("#btn-submit-link-action").hide();
$("#submit-btns-container").show();
}
}
updateSubmitLinkButtons();
function didLoginToFacebook(){
updateSubmitLinkButtons();
}
function submitLink_loginToFacebook(){
FB.getLoginStatus(function (response) {
if (response.authResponse) {
userModel.loginFacebook(response, BS.util.createGlobalCallback(updateSubmitLinkButtons));
BS.pubsub.fire("submit_link_fb_auth");
} else {
FB.login(function (response) {
if (response.authResponse) {
userModel.loginFacebook(response, BS.util.createGlobalCallback(updateSubmitLinkButtons));
BS.pubsub.fire("submit_link_fb_auth");
}
}, { scope : 'email,publish_actions,publish_stream' });
}
});
}
function submitLink_loginToTwitter () {
var
cb = function () {
updateSubmitLinkButtons();
};
userModel.initTwitterLogin(cb);
}
$("#btn-facebook-auth-submitlink")
.on("click", function (event) {
event.stopPropagation();
event.preventDefault();
submitLink_loginToFacebook();
return false;
});
$("#btn-twitter-auth-submitlink")
.on("click", function (event) {
event.stopPropagation();
event.preventDefault();
submitLink_loginToTwitter();
return false;
});
$("#btn-submit-via-twitter").on("click",function(event){
var url = $.trim($("#submit-link-url-input").val());
if(url.length == 0){
$("#submit-link-error").html("Please enter a URL").show();
return;
}
if(url.indexOf("http") < 0){
url = "http://" + url;
}
if(BS.util.validation.isURL(url)){
var text = encodeURI(url + " tip @digg");
var twitterURL = "https://twitter.com/intent/tweet?text=" + text + "&related=digg";
BS.util.popWin(twitterURL, null, { width: 530, height: 350 });
$("#submit-link-error").html("").hide();
}else{
$("#submit-link-error").html("Invalid URL").show();
}
});
function isValidURL(url) {
if(/^([a-z]([a-z]|\d|\+|-|\.)*):(\/\/(((([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=]|:)*@)?((\[(|(v[\da-f]{1,}\.(([a-z]|\d|-|\.|_|~)|[!\$&'\(\)\*\+,;=]|:)+))\])|((\d|[1-9]\d|1\d\d|2[0-4]\d|25[0-5])\.(\d|[1-9]\d|1\d\d|2[0-4]\d|25[0-5])\.(\d|[1-9]\d|1\d\d|2[0-4]\d|25[0-5])\.(\d|[1-9]\d|1\d\d|2[0-4]\d|25[0-5]))|(([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=])*)(:\d*)?)(\/(([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=]|:|@)*)*|(\/((([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=]|:|@)+(\/(([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=]|:|@)*)*)?)|((([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=]|:|@)+(\/(([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=]|:|@)*)*)|((([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=]|:|@)){0})(\?((([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=]|:|@)|[\uE000-\uF8FF]|\/|\?)*)?(\#((([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(%[\da-f]{2})|[!\$&'\(\)\*\+,;=]|:|@)|\/|\?)*)?$/i.test(url)) {
return true;
}else{
return false;
}
}
function submitURL(){
var url = $.trim($("#submit-link-url-input").val());
if(url.length == 0){
$("#submit-link-error").html("Please enter a URL").show();
return;
}
if (url.indexOf("http") < 0) {
url = "http://" + url;
}
if (BS.util.validation.isURL(url)) {
//if (isValidURL(url)) {
submitDiggURL(url);
$("#submit-link-error").html("").hide();
}else{
$("#submit-link-error").html("Invalid URL").show();
}
}
$("#submit-link-url-input")
.on("paste", function (event) {
BS.pubsub.fire("submit_link_pasted");
})
.on("keyup", function(event){
if(event.keyCode == 13){
if(userModel.isLoggedIn()){
submitURL();
}else{
submitLink_loginToFacebook();
}
}else{
$("#submit-link-error").html("").hide();
}
});
$("#btn-submit-link-action").on("click",function(event){
submitURL();
});
$("#submit-thanks-another").on("click", function(event){
$("#submit-link-thanks").hide();
$("#submit-link-url-input").val("");
$("#submit-link-form").show();
});
$(function () {
  $(window).load(function () {
    $(':input:visible:enabled:first').focus();
  });
})
function submitDiggURL (digg_url) {
var
el = $(this),
url = '/api/digg/submiturl.json',
diggDataProvider = new BS.util.xhr.dataProvider({
url : url,
type : 'POST',
data : {
url : digg_url,
_xsrf : BS.util.cookies.get("_xsrf")
},
success : function (response) {
$("#submit-link-form").hide();
$("#submit-thanks-url").html(digg_url);
$("#submit-link-thanks").show();
},
fail : function (error){
// console.log("error", error);
$("#submit-link-error").html("There was a problem submitting your URL. Please try again.").show();
}
});
diggDataProvider.request();
return false;
}
}(this, this.jQuery, this.BS));
</script>


